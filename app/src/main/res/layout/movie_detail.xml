<!--
Used for the detailed movie view
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="app.com.example.android.popularmovies.DetailActivityFragment"
    android:id="@+id/detail_fragment">

    <TextView android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:id="@+id/detail_text"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_image"
        android:layout_below="@+id/detail_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/text_detail_year"
        android:layout_below="@+id/detail_text"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/text_detail_runtime"
        android:layout_below="@+id/text_detail_year"
        android:layout_alignLeft="@+id/text_detail_year"
        android:layout_alignStart="@+id/text_detail_year" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/text_detail_releasedate"
        android:layout_below="@+id/text_detail_runtime"
        android:layout_alignLeft="@+id/text_detail_runtime"
        android:layout_alignStart="@+id/text_detail_runtime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/text_detail_description"
        android:layout_below="@+id/button_detail_favorite"
        android:layout_toRightOf="@+id/detail_image"
        android:layout_toEndOf="@+id/detail_image" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button_detail_favorite"
        android:layout_below="@+id/text_detail_releasedate"
        android:layout_alignLeft="@+id/text_detail_releasedate"
        android:layout_alignStart="@+id/text_detail_releasedate" />

</RelativeLayout>
